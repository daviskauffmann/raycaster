            ]
        },
        {
            "label": "Build & Run",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "make",
            "args": [
                "run"
            ]
        },
        {
            "label": "Clean",
            "type": "shell",
            "group": "build",
            "command": "make",
            "args": [
                "clean"
            ]
        },
    ]
